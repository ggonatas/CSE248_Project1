<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.InventoryDisplayController">
    <children>
        <BorderPane prefHeight="420.0" prefWidth="650.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <ToolBar prefHeight="40.0" prefWidth="640.0">
                    <items>
                        <Button fx:id="HomeBtn" mnemonicParsing="false" onAction="#showInventoryDisplay">
                            <graphic>
                                <ImageView fitHeight="150.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@ClothingStoreLogo.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <tooltip>
                                <Tooltip autoHide="true" text="Home" />
                            </tooltip>
                        </Button>
                        <Button mnemonicParsing="false">
                            <graphic>
                                <ImageView fitHeight="150.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@ShoppingCartIcon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <tooltip>
                                <Tooltip text="Shopping Cart" />
                            </tooltip>
                        </Button>
                        <Button alignment="CENTER_RIGHT" mnemonicParsing="false">
                            <graphic>
                                <ImageView fitHeight="150.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@OptionsIcon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <tooltip>
                                <Tooltip text="Options" />
                            </tooltip>
                        </Button>
                    </items>
                    <BorderPane.margin>
                        <Insets />
                    </BorderPane.margin>
                </ToolBar>
            </top>
            <left>
                <AnchorPane>
                    <children>
                        <VBox prefHeight="380.0" prefWidth="120.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome To Generic Clothing Shop, the one stop shop for all your generic clothing needs!" textAlignment="CENTER" wrappingWidth="120.0" />
                                <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="CATEGORIES" textAlignment="CENTER" wrappingWidth="120.0">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Text>
                                <Accordion prefHeight="270.0" prefWidth="120.0">
                                    <panes>
                                        <TitledPane animated="false" text="Shirts">
                                            <content>
                                                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                                    <children>
                                                        <ListView layoutX="-21.0" layoutY="-3.0" prefHeight="217.0" prefWidth="199.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                                    </children>
                                                </AnchorPane>
                                            </content>
                                        </TitledPane>
                                        <TitledPane animated="false" text="Pants">
                                            <content>
                                                <VBox prefHeight="200.0" prefWidth="100.0" />
                                            </content>
                                        </TitledPane>
                                        <TitledPane animated="false" prefWidth="120.0" text="Shorts">
                                            <content>
                                                <VBox prefHeight="200.0" prefWidth="100.0" />
                                            </content>
                                        </TitledPane>
                                    </panes>
                                </Accordion>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </left>
            <right>
                <AnchorPane>
                    <children>
                        <VBox prefHeight="380.0" prefWidth="131.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <TextField prefHeight="25.0" prefWidth="107.0" promptText="Search" />
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </right>
            <center>
                <AnchorPane>
                    <children>
                        <ScrollPane hbarPolicy="NEVER" prefHeight="380.0" prefWidth="399.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <content>
                                <FlowPane>
                                    <children>
                                        <Button fx:id="Product1Btn" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#showProductDisplay" prefHeight="126.0" prefWidth="133.0" text="Example Shirt 1" />
                                        <Button fx:id="Product2Btn" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#showProductDisplay" prefHeight="126.0" prefWidth="133.0" text="Example Shirt 2" />
                                        <Button alignment="BOTTOM_CENTER" mnemonicParsing="false" prefHeight="126.0" prefWidth="133.0" text="Extra Button" />
                                    </children>
                                </FlowPane>
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
